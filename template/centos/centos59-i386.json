{
  "variables": {
    "provisioner": "provisionerless",
    "provisioner_version": "",
    "iso_url": "http://mirror.symnds.com/distributions/CentOS-vault/5.9/isos/i386/CentOS-5.9-i386-bin-DVD-1of2.iso",
    "iso_checksum": "78f976b190ce44716eb672f71203df978474dfb4"
  },
  "builders": [{
    "vm_name": "centos59-i386",
    "type": "vmware-iso",
    "guest_os_type": "centos",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "centos59-i386",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "RedHat",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "PROVISIONER={{user `provisioner`}}",
      "PROVISIONER_VERSION={{user `provisioner_version`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/base.sh",
      "script/vagrant.sh",
      "script/sshd.sh",
      "script/vmtools.sh",
      "script/provisioner.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/centos59-i386-{{user `provisioner`}}{{user `provisioner_version`}}.box"
  }]
}
