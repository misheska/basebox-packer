{
  "builders": [{
    "vm_name": "arch201310",
    "type": "vmware",
    "guest_os_type": "freebsd-64",
    "iso_url": "http://mirrors.kernel.org/archlinux/iso/2013.10.01/archlinux-2013.10.01-dual.iso",
    "iso_checksum": "c0de9cde5f3c8f765a8fad06a07c5f6db3a93b15",
    "iso_checksum_type": "sha1",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<enter>",
      "<wait10><wait10>",
      "echo \"sshd: ALL\" > /etc/hosts.allow<enter>",
      "passwd<enter><wait>",
      "vagrant<enter>",
      "vagrant<enter>",
      "systemctl start sshd.service<enter><wait>"
    ],
    "shutdown_command": "/usr/bin/sleep 5 && umount /mnt && systemctl --no-block poweroff",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "arch201310",
    "type": "virtualbox",
    "iso_url": "http://mirrors.kernel.org/archlinux/iso/2013.10.01/archlinux-2013.10.01-dual.iso",
    "iso_checksum": "c0de9cde5f3c8f765a8fad06a07c5f6db3a93b15",
    "iso_checksum_type": "sha1",
    "guest_os_type": "ArchLinux_64",
    "guest_additions_attach": "true",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<enter>",
      "<wait10><wait10>",
      "echo \"sshd: ALL\" > /etc/hosts.allow<enter>",
      "passwd<enter><wait>",
      "vagrant<enter>",
      "vagrant<enter>",
      "systemctl start sshd.service<enter><wait>"
    ],
    "shutdown_command": "/usr/bin/sleep 3 && umount /mnt && systemctl --no-block poweroff",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{ .Name }}", "--memory", "512"],
      ["modifyvm", "{{ .Name }}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "script/base.sh",
      "script/host.sh",
      "script/ssh.sh",
      "script/vagrant.sh",
      "script/vmtools.sh"
    ],
    "override": {
      "virtualbox": {
        "execute_command": "echo 'vagrant'|{{.Vars}} bash '{{.Path}}'"
      },
      "vmware": {
        "execute_command": "echo 'vagrant'|{{.Vars}} bash '{{.Path}}'"
      }
    }
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/arch201310.box"
  }]
}
