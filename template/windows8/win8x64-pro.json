      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "floppy_files": [
        "floppy/win8x64-pro/Autounattend.xml",
        "floppy/00-run-all-scripts.cmd",
        "floppy/install-winrm.cmd",
        "floppy/set-all-networks-to-private.ps1",
        "floppy/powerconfig.bat",
        "floppy/passwordchange.bat",
        "floppy/openssh.bat"
      ],
      "tools_upload_flavor": "windows",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown /s /t 1 /f /d p:4:1 /c 'Packer Shutdown'",
      "disk_size": 40960,
      "vmx_data": {
        "memsize": "768",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "win8x64-pro",
      "type": "virtualbox-iso",
      "guest_os_type": "Windows8_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "floppy_files": [
        "floppy/win8x64-pro/Autounattend.xml",
        "floppy/00-run-all-scripts.cmd",
        "floppy/install-winrm.cmd",
        "floppy/set-all-networks-to-private.ps1",
        "floppy/powerconfig.bat",
        "floppy/passwordchange.bat",
        "floppy/openssh.bat",
        "floppy/oracle-cert.cer"
      ],
      "shutdown_command": "shutdown /s /t 1 /f /d p:4:1 /c 'Packer Shutdown'",
      "disk_size": 40960,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "768"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "environment_vars": [
        "PROVISIONER={{user `provisioner`}}",
        "PROVISIONER_VERSION={{user `provisioner_version`}}"
      ],
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
        "script/vagrant.bat",
        "script/provisioner.bat",
        "script/vmtools.bat"
      ]
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/script.bat"]
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "compression_level": 1,
    "vagrantfile_template": "vagrantfile-win8x64-pro.template",
    "output": "../../{{.Provider}}/win8x64-pro-{{user `provisioner`}}{{user `provisioner_version`}}.box"
  }]
