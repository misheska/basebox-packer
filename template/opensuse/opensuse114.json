{
  "builders": [
    {
      "vm_name": "opensuse114",
      "type": "vmware",
      "guest_os_type": "sles11-64",
      "http_directory": "http",
      "iso_url": "http://download.opensuse.org/distribution/11.4/iso/openSUSE-11.4-DVD-x86_64.iso",
      "iso_checksum": "bbd388d380546198e1797e15208f07074aae396c",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "tools_upload_flavor": "linux",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp",
        " install=cd:/",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst_en.xml",
        " textmode=1",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 10140,
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "opensuse114",
      "type": "virtualbox",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "http",
      "iso_url": "http://download.opensuse.org/distribution/11.4/iso/openSUSE-11.4-DVD-x86_64.iso",
      "iso_checksum": "bbd388d380546198e1797e15208f07074aae396c",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp",
        " install=cd:/",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst_en.xml",
        " textmode=1",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 10140,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "script/base.sh",
      "script/vagrant.sh",
      "script/vmtools.sh"
    ],
    "override": {
      "virtualbox": {
        "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S bash '{{.Path}}'"
      },
      "vmware": {
        "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S bash '{{.Path}}'"
      }
    }
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/opensuse114.box"
  }]
}
