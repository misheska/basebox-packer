{
  "variables": {
    "provisioner": "provisionerless",
    "provisioner_version": ""
  },
  "builders": [
    {
      "vm_name": "oracle58-i386",
      "type": "vmware",
      "guest_os_type": "oraclelinux",
      "http_directory": "http",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/EL5/U8/i386/OracleLinux-R5-U8-Server-i386-dvd.iso",
      "iso_checksum": "e9f58baa2fc3cbd55e9b484d50071a9d",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 10140,
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "oracle58-i386",
      "type": "virtualbox-iso",
      "http_directory": "http",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/EL5/U8/i386/OracleLinux-R5-U8-Server-i386-dvd.iso",
      "iso_checksum": "e9f58baa2fc3cbd55e9b484d50071a9d",
      "iso_checksum_type": "md5",
      "guest_os_type": "RedHat",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
      "disk_size": 10140,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "PROVISIONER={{user `provisioner`}}",
      "PROVISIONER_VERSION={{user `provisioner_version`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/base.sh",
      "script/vagrant.sh",
      "script/vmtools.sh",
      "script/provisioner.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/oracle58-i386-{{user `provisioner`}}{{user `provisioner_version`}}.box"
  }]
}
