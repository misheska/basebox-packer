{
  "variables": {
    "provisioner": "provisionerless",
    "provisioner_version": "",
    "provisioner_set_path": "",
    "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U4/i386/OracleLinux-R6-U4-Server-i386-dvd.iso",
    "iso_checksum": "afc350793e129e9dd0049c3fce282ff33cb623a9"
  },
  "builders": [{
    "vm_name": "oracle64-i386",
    "type": "vmware-iso",
    "guest_os_type": "oraclelinux",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "oracle64-i386",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "RedHat",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "PROVISIONER={{user `provisioner`}}",
      "PROVISIONER_VERSION={{user `provisioner_version`}}",
      "PROVISIONER_SET_PATH={{user `provisioner_set_path`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/vagrant.sh",
      "script/vmtools.sh",
      "script/provisioner.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/oracle64-i386-{{user `provisioner`}}{{user `provisioner_version`}}.box"
  }]
}
